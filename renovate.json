{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "ignorePresets": [":prHourlyLimit2"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "ignoreTests": true
}
